[module/date]
type = internal/date
interval = 5

date =
date-alt = " %m-%d-%Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 󰥔
format-prefix-foreground = ${colors.foreground}

label = %date% %time%

[module/pulseaudio]
